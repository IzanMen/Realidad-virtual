---

import Products from '../../public/data/products-list.json';
import AmazonButton from './AmazonButton.astro';

export interface Props {
    id: number;
    marca?: string;
    tipo?: string;
}

interface Product {
    id: number;
    name: string;
    link: string;
    image: {
        link: string;
        alt: string;
    };
}

const { id, marca, tipo } = Astro.props;

let product;

if (marca) {
    const products = Products.filter(product => product.marca === marca);
    product = products[id - 1];
} else if (tipo) {
    const products = Products.filter(product => product.tipo.includes(tipo));
    product = products[id - 1];
} else {
    product = Products.find(product => product.id === id);
}

---

{product && (
    <div class="product-element">
        <img
            height="250px"
            width="calc(100% / 4 - 55px)"
            class="product-element__image"
            src={product?.imagen.link} 
            alt={product?.imagen.alt}
        />
        <p class="product-element__title">{product?.nombre}</p>
        <div>
            <p class="product-element__price">{product?.precio}â‚¬</p>
            <AmazonButton
                text="Comprar en Amazon"
                href={product?.link}
                class="product-element__button"
            />
        </div>
    </div>
)}


<style>

    .product-element {
        width: calc(100% / 4 - 55px);
        height: 360px;
        padding: 20px;
        border: 1px solid #0002;
        margin-bottom: 20px;
        position: relative;

        display: flex;
        flex-direction: column;

        overflow: hidden;
    }

    .product-element div {
        display: flex;
        flex-direction: column;
        position: absolute;
        bottom: 10px;
        gap: 5px;
    }

    .product-element__image {
        margin-top: -40px;
        height: 250px;
        object-fit: contain;
    }

    .product-element__title {
        font-family: 'Allerta Stencil';
        font-weight: 100;
        margin: 0;
        margin-top: 10px;
    }

    .product-element__price {
        font-weight: 500;
        font-size: 1.2rem;
        margin-bottom: 0;
        font-family: 'Allerta Stencil';
    }

    @media screen and (max-width: 1225px) {
        .product-element {
            width: calc(100% / 3 - 55px);
        }
    }

    @media screen and (max-width: 809px) {
        .product-element {
            width: calc(100% / 2 - 48px);
        }
    }

    @media screen and (max-width: 533px) {
