</style>

<script>
	window.addEventListener('scroll', function () {
		const header = document.querySelector('.layout-header') as HTMLElement;
		const logo = document.querySelector('.layout-header__image') as HTMLElement;

		if (header && logo) {
			if (window.scrollY > 100) {
				header.classList.add('shrink');
				logo.classList.add('shrink');
			} else {
				header.classList.remove('shrink');
				logo.classList.remove('shrink');
			}
		}
	});

	const menu = document.querySelector('.layout-header__nav-menu') as HTMLElement;
	const nav = document.querySelector('.layout-header__nav-ul') as HTMLElement;
	const svg = document.querySelectorAll('.layout-header__nav-menu-svg');

	if (menu && nav) {
		menu.addEventListener('click', function () {
			nav.classList.toggle('active');
		});

		if (svg) {
			menu.addEventListener('click', function () {
				svg.forEach((element) => {
					element.classList.toggle('none');
				});
			});
		}
	}
</script>
