---

import Articles from '../../public/data/articles-list.json';

---

<div class="articles-list">
    <a href={Articles[0].link} class="articles-list__item">
        <img height="315px" src={Articles[0].image.src} alt={Articles[0].image.alt}>
        <span class="articles-list__item-shadow"></span>
        <p>{Articles[0].name}</p>
    </a>
    <a href={Articles[1].link} class="articles-list__item">
        <img height="315px" src={Articles[1].image.src} alt={Articles[1].image.alt}>
        <span class="articles-list__item-shadow"></span>
        <p>{Articles[1].name}</p>
    </a>
    <a href={Articles[2].link} class="articles-list__item">
        <img height="315px" src={Articles[2].image.src} alt={Articles[2].image.alt}>
        <span class="articles-list__item-shadow"></span>
        <p>{Articles[2].name}</p>
    </a>
</div>
<div class="articles-list">
    <a href={Articles[3].link} class="articles-list__item">
        <img height="315px" src={Articles[3].image.src} alt={Articles[3].image.alt}>
        <span class="articles-list__item-shadow"></span>
        <p>{Articles[3].name}</p>
    </a>
    <a href={Articles[4]?.link} class="articles-list__item">
        <img height="315px" src={Articles[4]?.image.src} alt={Articles[4]?.image.alt}>
        <span class="articles-list__item-shadow"></span>
        <p>{Articles[4]?.name}</p>
    </a>
    <a href={Articles[5]?.link} class="articles-list__item">
        <img height="315px" src={Articles[5]?.image.src} alt={Articles[5]?.image.alt}>
        <span class="articles-list__item-shadow"></span>
        <p>{Articles[5]?.name}</p>
    </a>
</div>

<style>

    .articles-list {
        display: flex;
        width: 100%;
        flex-wrap: wrap;
        padding: 0;
    }

    .articles-list__item {
        flex-grow: 1;
        flex-basis: 330px;
        position: relative;
        padding: 0;
    }

    .articles-list__item:hover {
        cursor: pointer;
    }

    .articles-list__item img {
        width: 100%;
        transition: all .2s;
        z-index: 10;
    }

    .articles-list__item-shadow {
        width: 100%;
        height: 100%;
        position: absolute;
        bottom: 4px;
        left: 0;
        background: linear-gradient(0deg, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0));
    }

    .articles-list__item:hover .articles-list__item-shadow {
        background: none; 
    }

    .articles-list__item p {
        color: #fff;
        position: absolute;
        bottom: 20px;
        margin: 0 15px;
        font-size: 1.5rem;

        font-family: "Allerta Stencil";
        font-weight: 100;
        z-index: 20;
    }
</style>
