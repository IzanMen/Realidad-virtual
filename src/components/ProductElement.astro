---

import Products from '../data/products-list.json';

export interface Props {
	id: number;
}

interface Product {
    id: number;
    name: string;
    link: string;
    image: {
        link: string;
        alt: string;
    };
}

const { id } = Astro.props as Props;

const product = Products.find(product => product.id === id);

---

<div class="product-element">
    <img class="product-element__image" src={product?.image.link} alt={product?.image.alt}>
    <h3 class="product-element__title">{product?.name}</h3>
    <a href={product?.link} class="product-element__link">Comprar en Amazon</a>
</div>

<style>

    .product-element {
        width: calc(100% / 4 - 55px);
        padding: 20px;
        border: 1px solid #0002;
        margin-bottom: 20px;

        display: flex;
        flex-direction: column;

        overflow: hidden;
    }

    .product-element__image {
        margin-top: -40px;
        height: 250px;
        object-fit: contain;
    }

    .product-element__title {
        font-family: 'Allerta Stencil';
        font-weight: 100;
        margin-top: 10px;
    }

    .product-element__link {
        font-family: 'Rajdhani';
        padding: 5px 10px;
        background-color: #FF9900;
        width: fit-content;
        text-decoration: none;
        color: #000;
        border-radius: 3px;
        transition: background-color 0.2s;
    }

    .product-element__link:hover {
        background-color: #ee8800;
    }

    @media screen and (max-width: 1225px) {
        .product-element {
            width: calc(100% / 3 - 55px);
        }
    }

    @media screen and (max-width: 809px) {
        .product-element {
            width: calc(100% / 2 - 45px);
        }
    }

    @media screen and (max-width: 533px) {
        .product-element {
            width: calc(100%);
        }
        
    }

</style>