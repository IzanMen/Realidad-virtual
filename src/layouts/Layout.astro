	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	.layout-header {
		width: 100%;
		height: 100px;
		background-color: #ddd;
		box-shadow: 0 0 20px 10px #aaa;
		padding: 0 100px;
		display: flex;
		justify-content: space-between;
		position: fixed;
		top: 0;
		z-index: 1000;
		transition: height 0.3s ease, padding 0.3s ease;
	}

	@media screen and (max-width: 1200px) {
		.layout-header {
			padding: 0 50px;
		}
	}

	@media screen and (max-width: 900px) {
		.layout-header {
			padding: 0 30px;
		}
	}

	.layout-header.shrink {
		height: 65px;
		padding: 0 80px;
	}


	.layout-header__image {
		width: 150px;
		transition: transform 0.3s ease;

		align-self: center;
	}

	.layout-header__image.shrink {
		transform: translateY(-100px);
	}

	.layout-header__nav-ul, .layout-footer__nav {
		width: 300px;
		height: 100%;
		display: flex;
		justify-content: space-between;
		align-items: center;
		list-style: none;
	}

	.layout-header__nav-ul a, .layout-footer__nav a {
		color: #000;
		text-decoration: none;
		font-family: 'Orbitron';
	}

	.layout-header__nav-menu {
		display: none;
	}

	.layout-header__nav-menu-svg.none {
		display: none;
	}

	@media screen and (max-width: 750px) {
		.layout-header {
			justify-content: center;
		}

		.layout-header__image {
			width: 170px;
		}

		.layout-header__nav {
			position: absolute;
			top: calc(90vh);
			right: 20px;
		}

		.layout-header__nav-ul {
			box-sizing: border-box;
			flex-direction: column;
			gap: 0;
			width: fit-content;
			position: absolute;
			right: 0;
			bottom: 0;
			background-color: #fff;
			padding: 50px 0;
			padding-bottom: 270px;
			border: 1px solid #000;
			border-radius: 10px;
			border-end-end-radius: 45px;

			z-index: 999;
			
			height: 0;
			padding: 0;
			opacity: 0;
			overflow: hidden;
			transition: height 0.3s ease, padding 0.3s ease;
		}

		.layout-header__nav-ul.active {
			height: 200px;
			padding: 50px 0;
			opacity: 1;
			padding-bottom: 270px;
		}

		.layout-header__nav-ul li {
			width: 200px;
			padding: 10px;
			text-align: center;
			background-color: #eee;
		}

		.layout-header__nav-ul__li--white{
			background-color: #fff !important;
		}

		.layout-header__nav-menu {
			display: flex;
			justify-content: center;
			align-items: center;
			position: absolute;
			padding: 20px;
			background-color: #011936;
			box-shadow: 0 0 20px 2px #fff;
			border-radius: 50%;
			bottom: 0;
			right: 0;
			z-index: 1000;
		}

		.layout-header__nav-menu svg {
			width: 35px;
			height: 35px;
		}
	}

	.layout-footer__nav a {
		color: #fff;
	}

